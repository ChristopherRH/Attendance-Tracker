@using AttendanceTracker.Controllers;
@model  IEnumerable<AttendanceTracker.Models.PlayerAttendance>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/datepicker.css" />
<br />
<span class="validation alert-danger"></span>
<input type="text" id="password" class="form-control" placeholder="password">
<input type="text" id="nameInput" class="form-control" placeholder="Name">
<input class="datepicker form-control" type="text" id="messageInput" placeholder="Select Date">
<br /><br />
<input type="button" class="btn btn-success" id="btnGet" value="Submit" onclick="CallMethod();" />

<hr />
<div class="input-group">
    <input id="filter" type="text" class="form-control" placeholder="Search...">
</div>
<div id="messagesDiv" class="searchable">
    <table class="table table-striped" id="attendance">
        @{
            var dict = new Dictionary<string, int>();
            var controller = (HomeController)ViewContext.Controller;
            foreach (var x in controller.GetCurrentDataBase())
            {
                <tr>
                    <td>@x.Name</td>
                    <td>@x.Date.Value.ToString("dd/MM/yyyy")</td>
                    <td>@x.Date.Value.DayOfWeek</td>
                    <td><input class="btn btn-danger" onclick='DeleteMethod("@x.Id");' value="Delete"/></td>
                </tr>
            }

            foreach (var d in dict.ToList())
            {
                <tr>
                    <td>@d.Key</td>
                    <td>@d.Value</td>
                </tr>
            }
        }
    </table>
</div>
@section scripts {
    <script src="https://cdn.firebase.com/v0/firebase.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="~/Scripts/datepicker.js"></script>
    <script src="~/Scripts/ControllerSupport.js"></script>
    <script src="~/Scripts/search.js"></script>
}